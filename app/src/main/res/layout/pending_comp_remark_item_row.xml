<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/bg_shape_item"
    android:padding="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_4sdp"
        card_view:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/text_shape_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/text_shape_bg">

                    <TextView
                        android:id="@+id/txtRemarkComplainnoHdadID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comp. no.: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                    <TextView
                        android:id="@+id/txtRemarkComplainnoValueID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/txtRemarkComplainnoHdadID"
                        android:background="@android:color/transparent"
                        android:text="805857434872 "
                        android:textColor="@color/blue_fb"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium" />


                    <TextView
                        android:id="@+id/txtRemarkDateHeadID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/txtRemarkDateValueID"
                        android:text="Date: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                    <TextView
                        android:id="@+id/txtRemarkDateValueID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:text="19.12.2014 "
                        android:textColor="@color/blue_fb"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/text_shape_bg">

                    <TextView
                        android:id="@+id/txtRemarkEnameHdadID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:         "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                    <TextView
                        android:id="@+id/txtRemarkEnameValueID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/txtRemarkEnameHdadID"
                        android:background="@android:color/transparent"
                        android:singleLine="true"
                        android:text="9500001082"
                        android:textColor="@color/blue_fb"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/text_shape_bg">

                    <TextView

                        android:id="@+id/txtRemarkActionHdadID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remark:      "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                    <TextView

                        android:id="@+id/txtRemarkActionValueID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/txtRemarkActionHdadID"
                        android:background="@android:color/transparent"
                        android:text="9500001082"
                        android:textColor="@color/blue_fb"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>