<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/btn_shape_rounded_corner_white">

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/a"
        android:gravity="center"
        android:padding="@dimen/_10sdp"

        android:src="@drawable/ic_cancel"
        android:scaleType="fitCenter" />

  <LinearLayout
      android:layout_below="@+id/a"
      android:layout_margin="@dimen/_20sdp"
      android:orientation="vertical"
      android:id="@+id/lvlTextShowValueID"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Set Serial Number"
          android:textSize="@dimen/_14ssp"
          android:textColor="@color/black"
          android:background="@android:color/transparent"

          />

      <TextView
          android:id="@+id/txtDataValue1ID"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="data1 value"
          android:textSize="@dimen/_14ssp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:background="@android:color/transparent"

          />


      <TextView
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Motor Serial Number"
          android:textSize="@dimen/_14ssp"
          android:textColor="@color/black"
          android:background="@android:color/transparent"

          />

      <TextView
          android:id="@+id/txtDataValue2ID"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="data 2 value"
          android:textSize="@dimen/_14ssp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:background="@android:color/transparent"

          />


      <TextView
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Controller Serial Number"
          android:textSize="@dimen/_14ssp"
          android:textColor="@color/black"
          android:background="@android:color/transparent"

          />

      <TextView
          android:id="@+id/txtDataValue3ID"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="data 3 value"
          android:textSize="@dimen/_14ssp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:background="@android:color/transparent"

          />



  </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="OK"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/lvlTextShowValueID"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_shape_rounded_corner"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>